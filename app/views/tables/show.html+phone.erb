<h2>Table '<%= @table.name.humanize %>'</h2>

<% if @table.fields.any? %>
	<p>
	  <%= form_tag(request.path, method: :get) do %>
	  	<div class="input-group-lg">

		    Rechercher: 
		    <%= text_field_tag :search, params[:search], onchange:'this.form.submit()', class: 'form-control' %>
		    <br>
		    
		    <% @table.fields.filtres.each_with_index do | field,index | %>
			    <%= field.name.humanize %>
			    <% default_value = params[:select] ? params[:select][index.to_s] : 'nil' %>
			    <%= select_tag "select[#{index}]", options_for_select(field.values.records_at(@records).pluck(:data).uniq.sort, default_value), include_blank:true, onchange:'this.form.submit()', class: 'form-control' %>
			    <br>
			<% end %>
		    <%= submit_tag 'Filtrer', class: 'btn-lg btn-success' %>
			|
			<%= link_to "Ajouter", fill_url(@table.id), class: 'btn-lg btn-primary' %>
			</div>
	  <% end %>
	</p>
	<br>

	<div class="table-responsive">
		<table class="table table-striped table-hover table-bordered table-condensed">
			<thead> 
				<tr>
					<th />
					<% @table.fields.each_with_index do | field,index | %>
						<th>
							<%= link_to_unless field.datatype == 'formule', field.name, url_for(params.merge(sort_by:field.id)) %>
						</th>
						<% @td_style[index] = @numeric_types.include?(field.datatype) ? 'text-right' : nil %>
					<% end %>
				</tr>
			</thead>

			<% if @records.any? %>
				<tbody>
					<% @records.each do | index | %>
						<% values = @table.values.joins(:field).records_at(index).order("fields.row_order").pluck(:data) %>
						<tr>
							<td>	
								<%= link_to image_tag('modif.png'), fill_url(@table.id, record_index:index), class:'btn btn-default' %>
							</td>
							<% @table.fields.each_with_index do | field,index | %>
								<% value = values[index] %>
								<td <%= "class=#{@td_style[index]}" if @td_style[index] %>>
									<% if field.datatype == "formule" %>
										<%= field.evaluate(values) %>
									<% elsif field.datatype == "fichier" and value %>
										<%= link_to(value.split('__').last, url_for("/table_files/" + value)) %>
									<% else %>
										<%= value %>
										<% @sum[field.id] += value.to_i if field.sum %>
									<% end %>
								</td>
							<% end %>
						</tr>
					<% end %>
				</tbody>

				<tfoot>
					<tr>
						<td />
						<% @table.fields.each do |field| %>
							<% if field.sum %>
								<td class="text-right">
									<%= @sum[field.id] %>
								</td>
							<% else %>
								<td />
							<% end %>
						<% end %>
					</tr>
				</tfoot>

			</table>
		</div>	
		<%= @records.count %> sur <%= @table.size %> au total
		<br>
	<% end %>
	<br>
<% end %>
<br><br>
