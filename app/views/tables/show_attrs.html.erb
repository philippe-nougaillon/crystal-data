<h2>Table '<%= @table.name.humanize %>'</h2>
<small>
	<%= link_to "Modifier", edit_table_path(@table), title:"Renommer cette table ou modifier les options" %>
	|
	<%= link_to "Partager", partages_path(@table), title:"Voir les utilisateurs qui partagent cette table" %>
</small>

<br><br>

<h3>Colonnes</h3>
<table class="table table-striped table-hover table-bordered sticky">
	<thead>
		<tr>
			<th>#</th>
			<th>Nom</th>
			<th>Type</th>
			<th>Options</th>
			<th />
		</tr>
	</thead>
	<% @table.fields.each_with_index do | field, index | %>
		<%= render partial:'fields/field', locals: {field:field, i:index} %>
	<% end %>
	<% unless @table.fields.any? %>
		<tr><td>Aucune colonne pour l'instant</td><td /><td /><td /></tr>
	<% end %>
</table>

<h3>Cr√©er une nouvelle colonne</h3>
<% if @field %>	
	<%= render partial:'fields/form' %>
<% end %>
