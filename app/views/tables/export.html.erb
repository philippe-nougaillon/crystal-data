<br>
<h2>
  <i class="glyphicon glyphicon-upload"></i> 
  Exporter la table '<%= @table.name.humanize %>'</h2>
<br><br>

<%= form_tag(action: "export_do", method: :post) do %>

  <%= hidden_field_tag :id, params[:id] %>

  <div class="field">
    <%= label :date_debut, "Exporter les données de '#{@table.name}' modifiées entre le " %>
    <%= text_field_tag :debut, params[:debut], class: 'datepicker' %>

    <%= label :date_fin, "et le " %>
    <%= text_field_tag :fin, params[:fin], class: 'datepicker' %>
  </div>
  <br>

  <div class="actions">
    <%= submit_tag "Exporter", class: 'btn btn-success' %>
  </div>
<% end %>
